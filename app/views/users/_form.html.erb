<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container w-50">

  <div class="field d-flex">
    <%= form.label :name, class: "form-label p-1 m-1" %>
    <%= form.text_field :name, class: "form-control p-1 m-1" %>
  </div>

  <div class="field d-flex">
    <%= form.label :work_hours_per_day, class: "form-label p-1 m-1" %>
    <%= form.number_field :work_hours_per_day, step: 0.5, class: "form-control p-1 m-1" %>
  </div>

  <div class="actions text-end">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
